extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content   
    main
        if prods.length > 0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header         
                            h1.product__title #{product.title} 
                        div.card__image
                            img(src="https://www.google.com/url?sa=i&url=http%3A%2F%2Fclipart-library.com%2Ffree-book-image.html&psig=AOvVaw1OlMGr91xBHpH-SboulKB6&ust=1633467547975000&source=images&cd=vfe&ved=0CAsQjRxqFwoTCLCTt_nSsfMCFQAAAAAdAAAAABAD", alt="")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book
                        .card__actions 
                            button.btn Add to Cart
        else 
            h1 No Products